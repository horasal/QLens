{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QLens",
  "version": "0.1.0",
  "identifier": "com.qlens.desktop",
  "build": {
    "frontendDist": "../frontend/build/",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "deno task --cwd ../frontend dev",
    "beforeBuildCommand": "deno task --cwd ../frontend build"
  },
  "app": {
    "windows": [
      {
        "title": "QLens",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
